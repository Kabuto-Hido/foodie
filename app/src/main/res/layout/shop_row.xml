<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F6F6F6">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shopImage"
        android:layout_width="170sp"
        android:layout_height="125sp"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/roundTopImageView" />

    <TextView
        android:id="@+id/textViewShopName"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:lines="3"
        android:layout_below="@+id/shopImage"
        android:layout_marginTop="10sp"
        android:text="TextView"
        android:textColor="#e59400"
        android:textSize="22sp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_below="@id/shopImage"
        android:layout_marginTop="10sp"
        android:layout_toRightOf="@+id/textViewShopName"
        android:layout_marginStart="20sp"
        android:background="#FFE3C9"
        app:shapeAppearanceOverlay="@style/roundImageView"
        android:src="@drawable/icon_active_heart"/>

</RelativeLayout>