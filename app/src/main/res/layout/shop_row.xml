<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_corner_item_gridview">

    <ImageView
        android:id="@+id/shopImage2"
        android:layout_width="170sp"
        android:layout_height="125sp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textViewShopName"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopImage2"
        android:layout_marginTop="10sp"
        android:lines="3"
        android:maxLines="3"
        android:text="TextView"
        android:textColor="#e59400"
        android:textSize="22sp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btnFavorite"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_below="@id/shopImage2"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        android:layout_toRightOf="@+id/textViewShopName"
        android:background="#FFE3C9"
        android:src="@drawable/icon_not_favorite"
        app:shapeAppearanceOverlay="@style/roundImageView" />

</RelativeLayout>