<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodManageActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/foodManageShopImage"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:contentDescription="Image Shop"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/btnBackFoodManage"
        android:layout_width="45sp"
        android:layout_height="32sp"
        android:layout_marginStart="25sp"
        android:layout_marginTop="15sp"
        android:contentDescription="btn back"
        android:src="@drawable/icon_btn_back" />

    <TextView
        android:id="@+id/textviewShopNameFoodManage"
        android:layout_width="260sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodManageShopImage"
        android:layout_marginStart="15sp"
        android:lines="2"
        android:maxLines="2"
        android:text="Shop 1"
        android:textColor="#241C1C"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/linearOptionShowList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/textviewShopNameFoodManage">

        <Button
            android:id="@+id/btnShowFoodListFoodManage"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:background="@drawable/button_styles2"
            android:text="Foods"
            android:textAllCaps="false"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnShowDrinkListFoodManage"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:background="@drawable/button_style4"
            android:text="Drinks"
            android:textAllCaps="false"
            android:textColor="#808080"
            android:layout_marginStart="40sp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listviewFoodManage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearOptionShowList"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="130sp"
        android:dividerHeight="5sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="72sp">

        <Button
            android:id="@+id/btnAddFood"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:text="Add new food"
            android:textColor="#EFEAEA"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginStart="40sp"
            android:background="@drawable/button_styles2"/>

        <Button
            android:id="@+id/btnEditFood"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:text="Edit food"
            android:textColor="#EFEAEA"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginStart="40sp"
            android:background="@drawable/button_styles2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_active_home_foodManagePage"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginStart="90sp"
            android:contentDescription="Active Home"
            android:src="@drawable/icon_active_home" />

        <ImageView
            android:id="@+id/icon_inactive_more_foodManagePage"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginStart="156sp"
            android:contentDescription="Inactive more action"
            android:src="@drawable/icon_inactive_more" />
    </LinearLayout>

</RelativeLayout>