<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/linearProfileMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBackPageEditProfile"
            android:layout_width="45sp"
            android:layout_height="30sp"
            android:src="@drawable/icon_btn_back"
            android:layout_marginStart="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="#241C1C"
            android:textSize="21sp"
            android:layout_marginStart="50sp" />
    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageUser"
        android:layout_width="85sp"
        android:layout_height="85sp"
        android:layout_below="@+id/linearProfileMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:src="@drawable/image_profile"
        app:shapeAppearanceOverlay="@style/customImageProfile"
        app:strokeColor="#000000"
        app:strokeWidth="1sp"/>

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageUser"
        android:layout_marginStart="30sp"
        android:layout_marginTop="20sp"
        android:text="Username"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextUserNameEditProfile"
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:layout_below="@+id/txtUsername"
        android:layout_marginStart="30sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="30sp"
        android:autofillHints="password"
        android:background="@drawable/border_input"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUserNameEditProfile"
        android:layout_marginStart="30sp"
        android:layout_marginTop="20sp"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextEmailEditProfile"
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:layout_below="@+id/txtEmail"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:layout_marginTop="20sp"
        android:autofillHints="password"
        android:background="@drawable/border_input"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextEmailEditProfile"
        android:layout_marginStart="30sp"
        android:layout_marginTop="20sp"
        android:text="Phone Number"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextPhoneNumberEditProfile"
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:layout_below="@+id/txtPhoneNumber"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:layout_marginTop="20sp"
        android:autofillHints="password"
        android:background="@drawable/border_input"
        android:inputType="phone"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPhoneNumberEditProfile"
        android:layout_marginStart="30sp"
        android:layout_marginTop="20sp"
        android:text="Address"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextAddressEditProfile"
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:layout_below="@+id/txtAddress"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:layout_marginTop="20sp"
        android:autofillHints="name"
        android:background="@drawable/border_input"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnContinuePageCart"
        android:layout_width="280sp"
        android:layout_height="60sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30sp"
        android:background="@drawable/button_styles2"
        android:text="CONFIRM"
        android:textSize="19sp"
        android:textColor="#EFEAEA"/>

</RelativeLayout>