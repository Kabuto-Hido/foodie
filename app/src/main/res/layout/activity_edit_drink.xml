<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditDrinkActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/btnUploadImageEditDrink"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:layout_centerHorizontal="true"
        android:contentDescription="Upload image drink"
        android:scaleType="centerInside"
        android:src="@drawable/icon_upload" />

    <ImageView
        android:id="@+id/btnBackEditDrinkPage"
        android:layout_width="45sp"
        android:layout_height="32sp"
        android:layout_marginStart="25sp"
        android:layout_marginTop="15sp"
        android:contentDescription="btn back"
        android:src="@drawable/icon_btn_back" />

    <TextView
        android:id="@+id/txtLabelAddDrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUploadImageEditDrink"
        android:layout_marginTop="10sp"
        android:layout_marginStart="20sp"
        android:text="Edit drink"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtLabelEditDrinkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLabelAddDrink"
        android:layout_marginStart="30sp"
        android:layout_marginTop="20sp"
        android:text="Drink name"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextEditDrinkName"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@+id/txtLabelEditDrinkName"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:autofillHints="password"
        android:background="@drawable/border_input"
        android:hint="Name drink you want to edit"
        android:inputType="text"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtLabelEditDrinkPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextEditDrinkName"
        android:layout_marginStart="30sp"
        android:layout_marginTop="20sp"
        android:text="Drink price"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextEditDrinkPrice"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@+id/txtLabelEditDrinkPrice"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:autofillHints="password"
        android:background="@drawable/border_input"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtLabelEditDrinkQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextEditDrinkPrice"
        android:layout_marginStart="30sp"
        android:layout_marginTop="20sp"
        android:text="Drink quantity"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextEditDrinkQuantity"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@+id/txtLabelEditDrinkQuantity"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:autofillHints="password"
        android:background="@drawable/border_input"
        android:hint="Quantity"
        android:inputType="number"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40sp">

        <Button
            android:id="@+id/btnConfirmEditDrink"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:text="Confirm"
            android:textColor="#EFEAEA"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginStart="40sp"
            android:background="@drawable/button_styles2"/>

        <Button
            android:id="@+id/btnCancelEditDrink"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:text="Cancel"
            android:textColor="#EFEAEA"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginStart="40sp"
            android:background="@drawable/button_styles2" />

    </LinearLayout>

</RelativeLayout>