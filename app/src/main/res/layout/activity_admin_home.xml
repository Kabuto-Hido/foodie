<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHomeActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/AdminDecorateImage"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:contentDescription="Image Shop"
        android:scaleType="fitXY"
        android:src="@drawable/decorate_admin_home" />

    <TextView
        android:id="@+id/AdminWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="55sp"
        android:text="Hi "
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtLabelAvailableShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available shop"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginStart="40sp"
        android:layout_marginTop="15sp"
        android:layout_below="@+id/AdminDecorateImage"/>

    <ListView
        android:id="@+id/listviewShop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtLabelAvailableShop"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="150sp"
        android:dividerHeight="5sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="76sp">

        <Button
            android:id="@+id/btnAddShop"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:text="Add new shop"
            android:textColor="#EFEAEA"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@drawable/button_styles2"/>

        <Button
            android:id="@+id/btnEditShop"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_marginStart="30sp"
            android:background="@drawable/button_styles2"
            android:text="Edit shop"
            android:textAllCaps="false"
            android:textColor="#EFEAEA"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="20sp">

        <ImageView
            android:id="@+id/icon_active_home_adminHomepage"
            android:contentDescription="Active Home"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon_active_home" />

        <ImageView
            android:id="@+id/icon_inactive_more_adminHomepage"
            android:contentDescription="Inactive more action"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginStart="150sp"
            android:src="@drawable/icon_inactive_more"
            />
    </LinearLayout>

</RelativeLayout>