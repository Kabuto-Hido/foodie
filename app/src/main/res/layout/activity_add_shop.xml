<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddShopActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/btnUploadImageShop"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:contentDescription="Upload image food"
        android:scaleType="centerInside"
        android:src="@drawable/icon_upload" />

    <ImageView
        android:id="@+id/btnBackAddShopPage"
        android:layout_width="45sp"
        android:layout_height="32sp"
        android:layout_marginStart="25sp"
        android:layout_marginTop="15sp"
        android:contentDescription="btn back"
        android:src="@drawable/icon_btn_back" />

    <TextView
        android:id="@+id/txtLabelAddShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUploadImageShop"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:text="Add a new shop"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtLabelShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLabelAddShop"
        android:layout_marginStart="30sp"
        android:layout_marginTop="15sp"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextShopName"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@+id/txtLabelShopName"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:autofillHints=""
        android:background="@drawable/border_input"
        android:hint="Name shop you want to add"
        android:inputType="text"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtLabelShopAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextShopName"
        android:layout_marginStart="30sp"
        android:layout_marginTop="15sp"
        android:text="Address"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextShopAddress"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@+id/txtLabelShopAddress"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:autofillHints=""
        android:background="@drawable/border_input"
        android:hint="Address"
        android:inputType="text"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtLabelShopPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextShopAddress"
        android:layout_marginStart="30sp"
        android:layout_marginTop="15sp"
        android:text="Phone Number"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextShopPhone"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@+id/txtLabelShopPhone"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:autofillHints=""
        android:background="@drawable/border_input"
        android:hint="Phone"
        android:inputType="phone"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="30sp">

        <Button
            android:id="@+id/btnConfirmAddShop"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:text="Confirm"
            android:textColor="#EFEAEA"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:background="@drawable/button_styles2"/>

        <Button
            android:id="@+id/btnCancelAddShop"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:text="Cancel"
            android:textColor="#EFEAEA"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginStart="30sp"
            android:background="@drawable/button_styles2" />

    </LinearLayout>

</RelativeLayout>