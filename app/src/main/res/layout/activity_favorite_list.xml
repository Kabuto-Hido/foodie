<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoriteListActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/linearFavoriteListMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBackPageFavorite"
            android:layout_width="45sp"
            android:layout_height="30sp"
            android:src="@drawable/icon_btn_back"
            android:layout_marginStart="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your favorite list"
            android:textColor="#241C1C"
            android:textSize="21sp"
            android:layout_marginStart="50sp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listviewShopFavorite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearFavoriteListMenu"
        android:layout_marginTop="25sp"
        android:layout_marginBottom="150sp"
        android:dividerHeight="10sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"/>

    <Button
        android:id="@+id/btnDeleteShopInFavorite"
        android:layout_width="280sp"
        android:layout_height="60sp"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60sp"
        android:background="@drawable/button_styles2"
        android:enabled="false"
        android:text="Delete"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="#EFEAEA"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20sp">

        <ImageView
            android:id="@+id/icon_inactive_home_FavoritePage"
            android:contentDescription="Inactive Home"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon_inactive_home"
            android:layout_marginStart="50sp"/>

        <ImageView
            android:id="@+id/icon_active_list_love_FavoritePage"
            android:contentDescription="Active love list"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon_active_heart"
            android:layout_marginStart="50sp"/>

        <ImageView
            android:id="@+id/icon_inactive_cart_FavoritePage"
            android:contentDescription="Inactive Cart"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon_inactive_cart"
            android:layout_marginStart="50sp"/>

        <ImageView
            android:id="@+id/icon_inactive_more_FavoritePage"
            android:contentDescription="Inactive more action"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon_inactive_more"
            android:layout_marginStart="50sp"/>
    </LinearLayout>

</RelativeLayout>