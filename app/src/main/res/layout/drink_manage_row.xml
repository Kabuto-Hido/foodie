<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearInfoDrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textviewNameDrinkManage"
            android:layout_width="210sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:lines="2"
            android:maxLines="2"
            android:text="Drink 1"
            android:textColor="#808080"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnRemoveDrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:src="@drawable/icon_delete"/>

    </LinearLayout>


    <TextView
        android:id="@+id/textviewPriceDrinkManage"
        android:layout_width="85sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearInfoDrink"
        android:layout_marginStart="20sp"
        android:text="10,000Ä‘"
        android:textColor="#FFD863"
        android:textSize="16sp" />

</RelativeLayout>