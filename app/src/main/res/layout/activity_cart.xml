<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/linearCartMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBackPageCart"
            android:layout_width="45sp"
            android:layout_height="32sp"
            android:layout_marginStart="25sp"
            android:layout_marginTop="15sp"
            android:contentDescription="btn back"
            android:src="@drawable/icon_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Your cart"
            android:textColor="#241C1C"
            android:textSize="22sp"
            android:layout_marginStart="50sp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listviewProductInCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearCartMenu"
        android:layout_marginTop="25sp"
        android:layout_marginBottom="150sp"
        android:dividerHeight="10sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"/>

    <Button
        android:id="@+id/btnProcessPageCart"
        android:layout_width="280sp"
        android:layout_height="60sp"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60sp"
        android:background="@drawable/button_styles2"
        android:text="Process"
        android:textSize="19sp"
        android:textColor="#EFEAEA"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20sp">

        <ImageView
            android:id="@+id/icon_inactive_home_CartPage"
            android:contentDescription="Inactive Home"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon_inactive_home"
            android:layout_marginStart="50sp"/>

        <ImageView
            android:id="@+id/icon_inactive_list_love_CartPage"
            android:contentDescription="Inactive love list"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon_inactive_heart"
            android:layout_marginStart="50sp"/>

        <ImageView
            android:id="@+id/icon_active_cart_CartPage"
            android:contentDescription="Active Cart"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon_active_cart"
            android:layout_marginStart="50sp"/>

        <ImageView
            android:id="@+id/icon_inactive_more_CartPage"
            android:contentDescription="Inactive more action"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon_inactive_more"
            android:layout_marginStart="50sp"/>
    </LinearLayout>

</RelativeLayout>