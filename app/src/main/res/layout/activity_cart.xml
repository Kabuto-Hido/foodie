<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/linearCartMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBackPageCart"
            style="@android:style/Widget.Button.Small"
            android:layout_width="50sp"
            android:layout_height="35sp"
            android:layout_marginStart="25sp"
            android:background="@color/white"
            android:text="<"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your cart"
            android:textColor="#241C1C"
            android:textSize="21sp"
            android:layout_marginStart="50sp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listviewProductInCart"
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:layout_below="@+id/linearCartMenu"
        android:layout_marginTop="25sp"
        android:dividerHeight="10sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"/>

    <Button
        android:id="@+id/btnContinuePageCart"
        android:layout_width="280sp"
        android:layout_height="60sp"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/listviewProductInCart"
        android:background="@drawable/button_styles2"
        android:text="Continue"
        android:textSize="19sp"
        android:textColor="#EFEAEA"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/btnContinuePageCart"
        android:layout_marginTop="20sp">

        <ImageView
            android:id="@+id/icon_active_home_CartPage"
            android:contentDescription="Inactive Home"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon_inactive_home"
            android:layout_marginStart="50sp"/>

        <ImageView
            android:id="@+id/icon_inactive_list_love_CartPage"
            android:contentDescription="Inactive love list"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon_inactive_heart"
            android:layout_marginStart="50sp"/>

        <ImageView
            android:id="@+id/icon_inactive_cart_CartPage"
            android:contentDescription="Active Cart"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon_active_cart"
            android:layout_marginStart="50sp"/>

        <ImageView
            android:id="@+id/icon_inactive_more_CartPage"
            android:contentDescription="Inactive more action"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon_inactive_more"
            android:layout_marginStart="50sp"/>
    </LinearLayout>

</RelativeLayout>